<%=render 'shared/path', :forum => @topic.forum %>
<% form_for [@topic,@post] do |f| -%>
<%= render 'shared/errors', :errors => @post.errors, :model => @post %>
	<div class="field">
	  <%= f.label :title %> <br />
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :content %> <br />
		<%= f.text_area :content %>
		</div>
		<div class="actions">
			<%= f.submit :answer %>
		</div>
<% end -%>